<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ruminoid.Toolbox.Shell.Views.OperationWindow"
        Title="{Binding OperationModel.Name}">
    <Grid RowDefinitions="*,Auto">
        <TabControl
            Grid.Row="0"
            Items="{Binding Items}"/>
        <Grid Grid.Row="1">
            <StackPanel
                Orientation="Horizontal"
                Margin="24"
                HorizontalAlignment="Right">
                <StackPanel.Styles>
                    <Style Selector="Button">
                        <Setter Property="Margin" Value="6"/>
                    </Style>
                </StackPanel.Styles>
                <Button Command="{Binding DoAddToQueue}">添加到队列</Button>
                <Button Command="{Binding DoAddToQueueAndContinue}">添加到队列并继续</Button>
                <Button Command="{Binding DoExport}"
                        IsEnabled="False">导出</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
