<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Ruminoid.Toolbox.Shell.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ruminoid.Toolbox.Shell.Views.QueueView">

    <UserControl.DataContext>
      <viewModels:QueueViewModel />
    </UserControl.DataContext>

  <Grid Margin="24"
        RowDefinitions="Auto,*">
      <Grid
          Grid.Row="0"
          ColumnDefinitions="Auto,*">
          <Grid
              Grid.Column="0"
              Width="48"
              Height="48">
              <StackPanel
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                  <TextBlock
                      Margin="12"
                      FontSize="24"
                      FontWeight="Bold">
                      队列
                  </TextBlock>
                  <ToggleSwitch
                      Margin="12"
                      IsChecked="{Binding QueueRunning}"/>
                  <Button
                      Margin="12"
                      Command="{Binding DoKill}">
                      强制停止
                  </Button>
              </StackPanel>
          </Grid>
          <Grid
              Grid.Column="1"
              RowDefinitions="Auto,*">
              <TextBlock Grid.Row="0" Text="{Binding CurrentProject.OperationName}"
                         Margin="0,0,0,12"
                         FontSize="24" />
              <TextBlock Grid.Row="1"
                         Text="{Binding CurrentProject.Source}"
                         Margin="0,0,0,6"
                         TextWrapping="Wrap" />
          </Grid>
      </Grid>
      <ListBox
          Grid.Row="1"
          Items="{Binding Items}"
          SelectedItem="{Binding SelectedItem}">
          <ListBox.Styles>
              <Style Selector="ListBoxItem">
              </Style>
          </ListBox.Styles>
          <ListBox.ItemTemplate>
              <DataTemplate>
                  <Grid RowDefinitions="Auto,*">
                      <TextBlock Grid.Row="0" Text="{Binding OperationName}"
                                 Margin="0,0,0,12"
                                 FontSize="24" />
                      <TextBlock Grid.Row="1"
                                 Text="{Binding Source}"
                                 Margin="0,0,0,6"
                                 TextWrapping="Wrap" />
                  </Grid>
              </DataTemplate>
          </ListBox.ItemTemplate>
      </ListBox>
  </Grid>
</UserControl>
