<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Ruminoid.Toolbox.Shell.Views"
        xmlns:controls="clr-namespace:Ruminoid.Toolbox.Shell.Controls"
        xmlns:helpers="clr-namespace:Ruminoid.Toolbox.Shell.Helpers"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ruminoid.Toolbox.Shell.Views.MainWindow"
        Title="Toolbox"
        Icon="resm:rmbox-shell.Assets.rmbox.ico"
        Width="1050" Height="600"
        MinWidth="1050" MinHeight="600">
    <Grid
        RowDefinitions="Auto,*">
        <Grid
            Grid.Row="0">
            <StackPanel
                Margin="12"
                Orientation="Horizontal"
                Spacing="12">
                <controls:DrawingIconButton
                    Icon="{DynamicResource VSCodeDark.add}"
                    Command="{x:Static helpers:CommandHelper.OpenContextMenuCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                    Classes="accent"
                    Content="创建操作">
                    <controls:DrawingIconButton.ContextMenu>
                        <ContextMenu>
                            <controls:DrawingIconMenuItem
                                Icon="{DynamicResource VSCodeLight.add}"
                                Command="{Binding DoCreateNewOperation}"
                                Header="创建操作"
                                Classes="accent"/>
                            <controls:DrawingIconMenuItem
                                Icon="{DynamicResource VSCodeLight.list-ordered}"
                                Command="{Binding DoCreateNewChain}"
                                Header="创建链式操作"
                                IsEnabled="False"/>
                        </ContextMenu>
                    </controls:DrawingIconButton.ContextMenu>
                </controls:DrawingIconButton>
                <controls:DrawingIconButton
                    Icon="{DynamicResource VSCodeLight.help}"
                    Command="{Binding DoShowAboutWindow}"
                    Content="帮助"/>
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="1">
            <views:QueueView/>
        </Grid>
    </Grid>
</Window>
