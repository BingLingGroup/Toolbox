<core:ConfigSectionBase xmlns="https://github.com/avaloniaui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:avalonia="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
                   xmlns:core="clr-namespace:Ruminoid.Toolbox.Core;assembly=rmbox-plugbase"
                   mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                   x:Class="Ruminoid.Toolbox.Plugins.Common.ConfigSections.Views.IntroConfigSection">
    <avalonia:MarkdownScrollViewer
        Markdown="{Binding MdText}"
        Margin="24">
        <avalonia:MarkdownScrollViewer.Styles>
            <StyleInclude Source="avares://rmnd-metro/Styles/MetroControls/MarkdownViewer.xaml" />
        </avalonia:MarkdownScrollViewer.Styles>
    </avalonia:MarkdownScrollViewer>
</core:ConfigSectionBase>
